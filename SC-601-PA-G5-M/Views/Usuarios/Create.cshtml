@model SC_601_PA_G5_M.Models.Usuarios.Usuarios

@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-crear {
        background: rgba(0, 0, 0, 0.6);
        color: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        margin-top: 20px;
        box-shadow: 0 6px 12px rgba(0,0,0,0.4);
    }

        .card-crear h4 {
            color: #ffc107;
            margin-bottom: 20px;
            font-weight: bold;
        }

    .btn-crear {
        background-color: #ffc107;
        color: #000;
        font-weight: bold;
        padding: 8px 16px;
        border-radius: 6px;
        border: none;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-crear:hover {
            background-color: #e0a800;
            color: #000;
        }

    .btn-cancelar {
        background-color: #6c757d;
        color: #fff;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
    }

        .btn-cancelar:hover {
            background-color: #5a6268;
        }

    label {
        color: #fff;
    }
</style>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card-crear">
        <h4>Nuevo usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Usuario)
            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Telefono)
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Rol)
            @Html.DropDownListFor(m => m.Rol, (SelectList)ViewBag.Roles, "-- Seleccione un rol --", new { @class = "form-control" })
        </div>

        <div>
            <input type="submit" value="Crear usuario" class="btn-crear" />
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn-cancelar" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
