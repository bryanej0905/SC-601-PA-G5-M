@model SC_601_PA_G5_M.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar contraseña";
}

<style>
    .btn-cambiar {
        background-color: #ffc107;
        color: #000;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-cambiar:hover {
            background-color: #e0a800;
            color: #000;
        }

    .form-label {
        color: #fff;
    }
</style>

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Formulario para cambiar tu contraseña</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="row mb-3">
            @Html.LabelFor(m => m.OldPassword, "Contraseña actual", new { @class = "col-md-2 col-form-label form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(m => m.NewPassword, "Nueva contraseña", new { @class = "col-md-2 col-form-label form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row mb-4">
            @Html.LabelFor(m => m.ConfirmPassword, "Confirmar nueva contraseña", new { @class = "col-md-2 col-form-label form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Cambiar contraseña" class="btn-cambiar" />
                @Html.ActionLink("Cancelar", "Index", "Manage", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>

    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
