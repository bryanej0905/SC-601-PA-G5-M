@model SC_601_PA_G5_M.Models.IndexViewModel
@{
    ViewBag.Title = "Mi Cuenta";
}

<style>
    .card-info {
        background: rgba(0, 0, 0, 0.6); /* semi-transparente oscuro */
        border-radius: 16px;
        padding: 25px;
        margin-bottom: 30px;
        color: #f8f9fa;
        backdrop-filter: blur(6px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
    }

        .card-info h4 {
            font-weight: 600;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .card-info dl dt {
            font-weight: bold;
            color: #dddddd;
        }

        .card-info dl dd {
            margin-bottom: 12px;
            color: #e0e0e0;
        }

    .btn-contraseña {
        background-color: #ffc107;
        color: #000;
        font-weight: bold;
        padding: 8px 16px;
        border-radius: 6px;
        border: none;
        text-decoration: none;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-contraseña:hover {
            background-color: #e0a800;
            color: #000;
        }
</style>

<main aria-labelledby="title">
    <h2 id="title" class="text-light">@ViewBag.Title</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div class="text-end mt-2">
        <a href="@Url.Action("EditarInformacion", "Manage")" class="btn btn-outline-light">
            <i class="fas fa-user-edit"></i> Editar información
        </a>
    </div>
    <div class="card-info">
        <h4>Información del usuario</h4>
        <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd>@ViewBag.UsuarioNombre</dd>

            <dt>Email:</dt>
            <dd>@ViewBag.UsuarioEmail</dd>

            <dt>Teléfono:</dt>
            <dd>@ViewBag.UsuarioTelefono</dd>

            <dt>Rol:</dt>
            <dd>@ViewBag.UsuarioRol</dd>
        </dl>
    </div>

    <div>
        <h4 class="text-light">Cambiar contraseña</h4>
        <hr />
        <dl class="dl-horizontal text-light">
            <dt>Contraseña:</dt>
            <br />
            <dd>
                @if (Model.HasPassword)
                {
                    <a href="@Url.Action("ChangePassword")" class="btn-contraseña">Cambiar contraseña</a>
                }
                else
                {
                    <a href="@Url.Action("SetPassword")" class="btn-contraseña">Crear contraseña</a>
                }
            </dd>


        </dl>
    </div>
</main>
