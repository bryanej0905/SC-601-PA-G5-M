@model IEnumerable<SC_601_PA_G5_M.Models.Contabilidad.TransaccionContable>

@{
    ViewBag.Title = "Contabilidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registros Contables</h2>

<p>
    @Html.ActionLink("Crear Nuevo Registro", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table tabla-blanca">
    <tr>
        <th>
            <i class="fa-regular fa-calendar"></i> @Html.DisplayNameFor(model => model.FechaTransaccion)
        </th>
        <th>
            <i class="fa-solid fa-tag"></i> @Html.DisplayNameFor(model => model.TipoTransaccion)
        </th>
        <th>
            <i class="fa-solid fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            <i class="fa-regular fa-file-lines"></i> @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            <i class="fa-regular fa-bookmark"></i> @Html.DisplayNameFor(model => model.CitaTaller)
        </th>
        <th>
            <i class="fa-solid fa-box"></i> @Html.DisplayNameFor(model => model.Producto)
        </th>
        <th>Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @(item.CitaTaller != null ? item.CitaTaller.DescripcionServicio : "-")
            </td>
            <td>
                @(item.Producto != null ? item.Producto.NombreProducto : "-")
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdTransaccion }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdTransaccion }, new { @class = "btn btn-dark btn-sm" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdTransaccion }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
